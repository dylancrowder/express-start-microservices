{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",                                // <- Cambiado
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",                                // para usar "paths"
    "paths": {
      "@ecomerce/common/*": ["../common/src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "../common/src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
