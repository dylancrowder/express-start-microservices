{
  "name": "products",
  "version": "1.0.0",
  "description": "Products service for E-commerce application",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon --watch src --ext ts,json --exec ts-node -r tsconfig-paths/register src/server.ts --legacy-watch",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "cross-env NODE_ENV=development jest --detectOpenHandles --verbose",
    "inspect": "cross-env NODE_ENV=development node --inspect -r ts-node/register src/server.ts"
  },
  "dependencies": {
    "@ecomerce/common": "*",
    "@types/express": "^5.0.3",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "express-winston": "^4.2.0",
    "joi": "^17.13.3",
    "mongoose": "^8.10.1",
    "prom-client": "^15.1.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/cors": "^2.8.19",
    "@types/express-winston": "^3.0.4",
    "@types/jest": "^29.5.14",
    "@types/joi": "^17.2.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.9.1",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.15.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-you-dont-need-lodash-underscore": "^6.14.0",
    "globals": "^15.12.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.1.7",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.9.2",
    "typescript-eslint": "^8.15.0"
  }
}
