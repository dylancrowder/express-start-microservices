{
  "name": "gateway",
  "description": "Gateway service for E-commerce application",
  "version": "1.0.0",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon --watch src --ext ts,json --exec ts-node -r tsconfig-paths/register src/server.ts --legacy-watch",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "cross-env NODE_ENV=development jest --detectOpenHandles --verbose",
    "inspect": "cross-env NODE_ENV=development node --inspect -r ts-node/register src/server.ts"
  },
  "dependencies": {
    "@ecomerce/common": "*",
    "@types/express": "^5.0.3",
    "compression": "1.7.5",
    "cookie-parser": "^1.4.7",
    "cors": "2.8.5",
    "cross-env": "7.0.3",
    "dotenv": "16.4.5",
    "express": "^5.1.0",
    "express-http-proxy": "^2.1.1",
    "express-rate-limit": "7.4.1",
    "express-winston": "^4.2.0",
    "helmet": "8.0.0",
    "jsonwebtoken": "^9.0.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@ecomerce/common": "*",
    "@types/compression": "1.7.5",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "2.8.17",
    "@types/express-http-proxy": "^1.6.6",
    "@types/express-winston": "^3.0.4",
    "@types/http-proxy-middleware": "0.19.3",
    "@types/jest": "29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "22.9.1",
    "@types/swagger-jsdoc": "^6.0.4",
    "jest": "29.7.0",
    "nodemon": "3.1.7",
    "ts-node": "10.9.2",
    "typescript": "5.6.3"
  }
}
